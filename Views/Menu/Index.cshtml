    <div id="row">
        <div class="col-md-4">
            <h1>Products</h1>
        </div>
        <div class="row">
            <hr class="line">
        </div>
        @* <div class="row"> *@
        @*     @foreach (var item in Model) { *@
        @*         <div class="col-lg-4"> *@
        @*             <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.MenuItemID"> *@
        @*                 <div class="card-body card border-0"> *@
