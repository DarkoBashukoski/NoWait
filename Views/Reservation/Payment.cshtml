@page
@model NoWait.Views.Reservation.Payment

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="card p-2">
                        <h1 class="text-black text-center">Checkout</h1>
                        <h1 class="text-black text-center" style="">Total:</h1>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label text-black">Full Name</label>
                                    <input class="form-control" placeholder="Bob Smith"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">Country</label>
                                    <input class="form-control" placeholder="Slovenia"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">City</label>
                                    <input class="form-control" placeholder="Ljubljana"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">Address</label>
                                    <input class="form-control" placeholder="st. Marc, no. 5"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label text-black">Payment Methods</label>
                                    <img src="~/images/restaurant.jpg/" alt="" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">Card Number</label>
                                    <input class="form-control" placeholder="1234-5678-9012-3456"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">CVV</label>
                                    <input class="form-control" placeholder="123"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label text-black">Expiration Date</label>
                                    <input class="form-control" placeholder="01/2023"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <a asp-controller="Home" asp-action="Index">
                                    <button class="form-control btn btn-success mt-2">Confirm Payment</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </section>
</div>

<script>

function cardnumber(inputtxt){
  var cardno = /\d{16}/;
  if(inputtxt.value.match(cardno)){ return true; }
  else{ 
      alert("Not a valid Dinners Club card number!");
      return false;
  }
}

function CCVnumber(inputtxt){
  var cardno = /\d{3}/;
  if(inputtxt.value.match(cardno)){ return true; }
    else{ 
        alert("Not a valid Dinners Club card number!");
        return false;
    }
}

function DateValidation(inputtxt){
  var cardno =  /\d{2}\/\d{2}/;
  if(inputtxt.value.match(cardno)){ return true; }
    else{ 
        alert("Not a valid Dinners Club card number!");
        return false;
    }
}


</script>


</body>
</html>