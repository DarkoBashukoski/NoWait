@model NoWait.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h1 class="text-center" style="color:#198754">Orders</h1>
    <h4 class="text-center">Orders for Reservation Id: @Model.ReservationId</h4>
    <hr />
    @{ float totalPrice = 0;}
    <table class="table table-dark table-striped table-hover" style="color:#198754">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Orders[0].OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders[0].Item)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders[0].Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orders[0].Item.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Orders.Count; i++) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Orders[i].OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Orders[i].Item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Orders[i].Count)
                </td>
                <td>
                    @{ float priceCalculated = Model.Orders[i].Item.Price * Model.Orders[i].Count;}
                    @{ totalPrice += priceCalculated;}
                    @{ string priceCalculatedStr = priceCalculated + " €";}
                    @priceCalculatedStr
                    @* @Html.DisplayFor(model => Model.Orders[i].Item.Price * Model.Orders[i].Count) *@
                </td>
                <td>
                </td>
            </tr>
        }
